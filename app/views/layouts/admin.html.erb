<!DOCTYPE html>
<html>
<head>
  <title>低调开发-后台</title>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "bootstrap/bootstrap-modal" %>
  <%= javascript_include_tag "bootstrap/bootstrap-alerts" %>
  <%= javascript_include_tag "bootstrap/bootstrap-twipsy" %>
  <%= javascript_include_tag "bootstrap/bootstrap-popover" %>
  <%= javascript_include_tag "bootstrap/bootstrap-dropdown" %>
  <%= javascript_include_tag "bootstrap/bootstrap-scrollspy" %>
  <%= javascript_include_tag "bootstrap/bootstrap-tabs" %>
  <%= stylesheet_link_tag "bootstrap.min" %>
  <%= csrf_meta_tag %>
  <%= yield :head %>
</head>
<body>
    <div class="topbar">
      <div class="topbar-inner">
        <div class="container">
          <a href="/" class="brand">低调开发-后台</a>
          <ul class="nav">
             <li <%=raw 'class="active"' if controller.controller_name == 'sources' %>><%= link_to "来源管理", admin_sources_path %></li>
             <li <%=raw 'class="active"' if controller.controller_name == 'users' %>><a href="#">用户管理</a></li>
             
             <li <%=raw 'class="active"' if controller.controller_name == 'statistics' %>><a href="#">统计分析</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div style="height:80px">
    </div>
    <div class="container-fluid">
      <div class="sidebar">
        
         <ul class="side_bar">
          

          
         </ul>
      </div>
      <div class="content">
        <% alert = flash[:error] %>
        <% notice = flash[:notice] %>
        <% if alert %>
          <div class="alert-message error">
            <p><strong><%=raw alert %></strong> </p>
          </div>
        <% end %>

        <% if notice %>
          <div class="alert-message success">
            <p><strong><%=raw notice %></strong> </p>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <!-- </div> -->
</body>
</html>
